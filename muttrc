# mailbox
set mbox_type = Maildir
set folder    = "~/Mail/"
set spoolfile = "~/Mail/Inbox"

# sending mail
set realname = "Wally Jones"
set from = "wally@imwally.net"
set record = +Sent
set postponed = +Drafts
set editor = "/usr/bin/emacs -nw"
set sendmail = "/usr/bin/msmtp"

# viewing mail
unset help				# Remove top help menu
set pager_index_lines = 10		# Split index / messages horizontally
set pager_context = 3 			# Leave a 3 line buffer between index / messages
set markers = no    			# Remove wrap markers
set wrap = 80 				# Wrap all messages at 80 cols
set index_format = "%Z %-20.20L    %.60s %> %{%b %d}"

# archive mail
macro index A ":set confirmappend=no delete=yes\n<save-message>=Archives.`date +%Y`\n<sync-mailbox>:set confirmappend=yes delete=ask-yes\n"

# basic colors
color normal        black	    default         
color error         red             default         
color tilde         black           default         
color message       cyan            default         
color markers       red             white           
color attachment    white           default         
color search        brightmagenta   default
color signature     black 	    default
color status        brightblack	    default
color indicator     brightwhite	    cyan
color tree          cyan	    default

# header colors
color hdrdefault    black	    white

# quote colors
color quoted        blue            default         
color quoted1       cyan            default         
color quoted2       yellow          default         
color quoted3       red             default         
color quoted4       brightred       default

# mono colors
mono  bold          bold
mono  underline     underline
mono  indicator     reverse
mono  error         bold
