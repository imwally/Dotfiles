# mailbox
set beep_new  = yes
set mbox_type = Maildir
set folder    = $HOME/Mail
set spoolfile =+Inbox
set header_cache=~/.cache/mutt
mailboxes =Inbox
mailboxes =Archive
mailboxes =Sent
mailboxes =Draft
mailboxes =Trash

# sending mail
set realname = "Wally Jones"
set from = "wally@imwally.net"
set record = +Sent
set postponed = +Drafts
set editor = "/usr/bin/emacs -nw"
set sendmail = "/usr/local/bin/msmtp"
set user_agent = no

# sidebar
set sidebar_visible = no
set sidebar_width = 15 
set sidebar_divider_char ="  "
set sidebar_folder_indent = yes 
set sidebar_indent_string= " "
set sidebar_format = "%B%*"
set sidebar_short_path = yes
bind index,pager B sidebar-toggle-visible

bind index,pager \CO sidebar-open
bind index,pager \CP sidebar-prev
bind index,pager \CN sidebar-next

# viewing mail
set pager_index_lines = 10		# Split index / messages horizontally
set pager_context = 3 			# Leave a 3 line buffer between index / messages
set markers = no    			# Remove wrap markers
set sort = threads			# Show threads

set index_format = "[%Z] %[!%b %d]   %-15.15L    %s"

# archive mail
macro index A ":set confirmappend=no delete=yes\n<save-message>=Archive\n<sync-mailbox>:set confirmappend=yes delete=ask-yes\n"

# sidebar colors
color sidebar_indicator   brightdefault   default
color sidebar_highlight   black           white 
color sidebar_new         brightdefault   default

# basic colors
color normal        default	    default
color error         red             default         
color tilde         default         default         
color message       default         default         
color markers       default         default
color attachment    white           default
color search        brightdefault   default
color signature     brightdefault   default
color status        brightwhite     blue 
color indicator     black           white
color tree          default	    default

# header colors
color hdrdefault    brightdefault   default 

# quote colors
color quoted        blue            default         
color quoted1       green           default         
color quoted2       red             default         
color quoted3       yellow          default         
color quoted4       magenta         default

# mono colors
mono  bold          bold
mono  underline     underline
mono  indicator     reverse
mono  error         bold
