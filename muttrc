# mailbox
set mbox_type = Maildir
set folder    = $HOME/Mail
set spoolfile =+Inbox
set header_cache=~/.cache/mutt
mailboxes +Inbox +Sent +Drafts +Trash  +Lists `echo ~/Mail/Lists/.[A-Z]*` +Archives `echo ~/Mail/Archives/.*[0-9]`

# sending mail
set realname = "Wally Jones"
set from = "wally@imwally.net"
set record = +Sent
set postponed = +Drafts
set editor = "/usr/bin/emacs -nw"
set sendmail = "/usr/bin/msmtp"

# sidebar
set sidebar_visible = yes
set sidebar_delim="| "
set sidebar_width=20
bind index,pager \CP sidebar-prev
bind index,pager \CN sidebar-next
bind index,pager \CO sidebar-open

# viewing mail
#set pager_index_lines = 10		# Split index / messages horizontally
#set pager_context = 3 			# Leave a 3 line buffer between index / messages
set markers = no    			# Remove wrap markers

set index_format = "%Z %-20.20L    %.60s %> %10{%b %d}"

# archive mail
macro index A ":set confirmappend=no delete=yes\n<save-message>=Archives.`date +%Y`\n<sync-mailbox>:set confirmappend=yes delete=ask-yes\n"

# basic colors
color normal        default	    default
color error         red             default         
color tilde         default         default         
color message       default         default         
color markers       default         default
color attachment    default         default         
color search        brightdefault   default
color signature     brightdefault   default
color status        brightblack	    default
color indicator     default	    white
color tree          default	    default
color sidebar_new   brightblack     default

# header colors
color hdrdefault    default         white

# quote colors
color quoted        default         default         
color quoted1       default         default         
color quoted2       default         default         
color quoted3       default         default         
color quoted4       default         default

# mono colors
mono  bold          bold
mono  underline     underline
mono  indicator     reverse
mono  error         bold
