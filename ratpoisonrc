set padding 0 50 0 0
set border 7 

set bgcolor black
set fgcolor white
set fwcolor deepskyblue
set bwcolor gainsboro

set barpadding 10 10
set barborder 0
set bargravity nw
set barinpadding 1

unmanage xfce4-panel
unmanage xfce4-notifyd

bind c exec xterm
bind f exec firefox

definekey top M-Tab focus
definekey top M-ISO_Left_Tab focusprev

definekey top M-1 exec rpws 1
definekey top M-2 exec rpws 2
definekey top M-3 exec rpws 3
definekey top M-4 exec rpws 4
exec /usr/bin/rpws init 4 -k
